/* pages/home/borrow/index.wxss */
.page{
    padding:20rpx;
    background-color:#ebebeb;
}
.item-container{
    position: relative;
    margin-bottom:24rpx;
}
.item-content{
    width:90%;
    padding:8rpx;
    display: -webkit-box;
    position: relative;
    background-color: #fff;
}
.item-content .cover{
    width:140rpx;
    height: 200rpx;
}
.item-content .cover image{
    width:140rpx;
    height: 200rpx;
}
.book-info{
    -webkit-box-flex: 1;
}
.book-info .title{
    padding:26rpx 12rpx;
    border-bottom: 1px solid #eee;
}
.book-info .borrow-num{
    padding:12rpx;
    font-size: 24rpx;
    color:#999;
}
.book-info .borrow-num .num{
    font-size: 28rpx;
    color:#3EA3FE;
} 
.borrow-time{
    position:absolute;
    right:18%;
    bottom:8rpx;
    font-size: 24rpx;
    color:#999;
}
.renew{
    position: absolute;
    right:0;
    top:28rpx;
    height: 160rpx;
    width:160rpx;
    border-radius: 80rpx;
    border:5rpx solid #ebebeb;
    background-color: #3EA3FE;
    color:#fff;
    text-align: center;
    line-height: 160rpx;
    z-index: 1;
}
.renew.isrenewed{
    background-color:#C6C6C6;
}